@model List<HerbDto>
<div class="container my-5">
    <div class="card-columns">
        @foreach (var herb in Model)
        {

            <div class="card border-0 shadow-sm">
                <div class="card-header">
                    <img src="/@herb.Image" class="card-img-top" />
                </div>
                <div class="card-body">
                    <h6>@herb.Name</h6>
                    <p>
                        <a href="/Herbss/Detail?code=@herb.EncrypedId" class="btn btn-outline-primary btn-block">
                            Detay
                        </a>
                    </p>
                </div>
            </div>

        }
    </div>
    </div>
