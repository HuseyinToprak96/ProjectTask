@model CoreLayer.Dtos.Herb.HerbDetailDto

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Manager/Views/Shared/adminLayout.cshtml";
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a href="#general" data-bs-toggle="tab" class="nav-link active">General</a>
    </li>
    <li class="nav-item">
        <a href="#complaints2" data-bs-toggle="tab" class="nav-link">Complaints</a>
    </li>

</ul>
<div class="tab-content py-4">
    <div class="tab-pane fade show active" id="general">
        <table class="table table-striped">
            <tr>
                <td rowspan="4" width="300px">
                    <img src="/@Model.Image" height="400" width="300"/>
                </td>
                <th colspan="3" height="80px">@Model.Name</th>
            </tr>
            <tr>
                <td rowspan="3" colspan="3">@Html.Raw(Model.Description)</td>
            </tr>
        </table>
    </div>
    <div class="tab-pane fade" id="complaints2">
        <ul>
            @foreach (var item in Model.Complaints)
            {
                <li>@item.Name</li>
            }
        </ul>
    </div>
</div>
<div>
    <a href="/Manager/Herbs/List" class="btn btn-light">Back to List</a>
</div>
